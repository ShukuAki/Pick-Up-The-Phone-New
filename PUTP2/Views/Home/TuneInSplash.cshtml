@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Tune In</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #7F3B35;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
        }

        .splash-container {
            position: relative;
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            animation: fadeInOut 3.5s ease-in-out forwards;
        }

        .splash-image {
            max-width: 80%;
            max-height: 80vh;
            object-fit: contain;
        }

        @@keyframes fadeInOut {
            0% {
                opacity: 0;
            }
            5% {
                opacity: 1;
            }
            95% {
                opacity: 1;
            }
            100% {
                opacity: 0;
            }
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <img src="/splash-content/tune-in_gif.gif" alt="Tune In" class="splash-image">
    </div>

    <script>
        // Redirect after the GIF duration (3.5 seconds)
        setTimeout(function() {
            window.location.href = '@Url.Action("TuneIn", "Music")';
        }, 3500);
    </script>
</body>
</html> 