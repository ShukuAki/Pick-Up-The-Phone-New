@model List<PUTP2.Models.PlaylistInfo>
@{
    ViewData["Title"] = "The Vault";
}

<div class="container">
    <h1>the vault</h1>

    <div class="playlists-grid">
        @foreach (var playlist in Model)
        {
            <a href="@Url.Action("Playlist", "Music", new { id = playlist.Id })" class="playlist-card-link">
                <div class="playlist-card">
                    <div class="playlist-cover">
                        <img src="@playlist.CoverUrl" alt="@playlist.Title">
                    </div>
                    <div class="playlist-info">
                        <h4 class="text-primary">@playlist.Title</h4>
                        <p class="text-muted">@playlist.TrackCount tracks • @playlist.Duration</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
