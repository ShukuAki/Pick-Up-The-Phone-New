@model PUTP2.Models.TrackViewModel

@{
    ViewData["Title"] = Model.Name;
    ViewData["HidePlayerBar"] = "true";
}

<div class="turntable-container">
    <div class="back-button" onclick="history.back()">
        <i class="fas fa-chevron-left"></i>
    </div>
    
    <div class="vinyl-player">
        <div class="vinyl-record" id="vinyl">
            <div class="vinyl-grooves"></div>
            <div class="vinyl-label">
                <img src="@Model.ImageUrl" alt="Vinyl Label" class="label-image">
            </div>
        </div>
        <picture class="tonearm" id="tonearm">
            <source srcset="/images/needle.png" type="image/png">
            <img src="/images/needle.png" alt="Tonearm" style="width: 100%; height: 100%; object-fit: contain;">
        </picture>
    </div>

    <div class="track-info">
        <h2 class="track-title">@Model.Name</h2>
        <div class="track-metadata">
            <div class="metadata-item">
                <span class="metadata-label">@Model.UserTag</span>
                <span class="metadata-divider">Â·</span>
                <span class="metadata-value">@Model.Location</span>
            </div>
            <p class="metadata-description">
                @Model.PlaylistTitle
            </p>
        </div>
    </div>

    <div class="player-controls">
        <audio id="audio-player" src="@Model.AudioUrl">
            Your browser does not support the audio element.
        </audio>
        <div class="control-group">
            <button class="nav-btn"><i class="fas fa-step-backward"></i></button>
            <button id="playPauseBtn" class="control-btn primary">
                <i class="fas fa-play" id="playIcon"></i>
            </button>
            <button class="nav-btn"><i class="fas fa-step-forward"></i></button>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Hide the footer bar */
        .footer-nav {
            display: none !important;
        }

        .turntable-container {
            height: 100vh;
            background: #0a0a0a;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            font-size: 24px;
            cursor: pointer;
            z-index: 10;
        }

        .vinyl-player {
            width: min(80vw, 80vh);
            aspect-ratio: 1;
            position: relative;
            margin: 40px auto;
        }

        .vinyl-record {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: #111;
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: none;
            transition: transform 0.5s ease;
            overflow: hidden;
        }

        .vinyl-grooves {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 50%;
            background: repeating-radial-gradient(
                circle at center,
                #151515 0,
                #151515 1px,
                #1d1d1d 2px,
                #1d1d1d 3px
            );
            opacity: 0.9;
        }

        .vinyl-record.playing {
            animation: spin 2s linear infinite;
        }

        .vinyl-record.stopping {
            animation: slowStop 1s linear forwards;
        }

        .vinyl-label {
            width: 25%;
            height: 25%;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid #333;
            position: relative;
            z-index: 1;
            background: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .label-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .tonearm {
            position: absolute;
            top: -2%;
            right: 12%;
            width: 15%;
            height: 35%;
            transform-origin: 90% 10%;
            transition: transform 1s ease;
            transform: rotate(-20deg);
            z-index: 10;
            pointer-events: none;
            max-width: 100px;
            background: none !important;
        }

        .tonearm.playing {
            transform: rotate(0deg);
        }

        .tonearm.stopping {
            transform: rotate(-20deg);
            transition: transform 1.2s ease-in-out;
        }

        .tonearm img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: none !important;
        }

        .track-info {
            color: white;
            text-align: center;
            margin: 20px 0;
            width: 100%;
            max-width: 600px;
        }

        .track-title {
            font-size: 24px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .track-metadata {
            font-size: 14px;
            opacity: 0.9;
        }

        .metadata-item {
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .metadata-label {
            color: #ccc;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
        }

        .metadata-divider {
            color: #666;
        }

        .metadata-value {
            color: #ccc;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
        }

        .metadata-description {
            font-style: italic;
            opacity: 0.8;
            margin-top: 10px;
            color: #999;
        }

        .player-controls {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 200px;
        }

        .control-group {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .control-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            transition: all 0.3s ease;
        }

        .control-btn.primary {
            width: 60px;
            height: 60px;
            background: white;
            color: black;
        }

        .control-btn:hover {
            transform: scale(1.1);
        }

        .nav-btn {
            background: none;
            border: none;
            color: #666;
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
            transition: all 0.3s ease;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-btn:hover {
            color: white;
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @@keyframes slowStop {
            0% { 
                transform: rotate(0deg); 
                animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
            }
            100% { 
                transform: rotate(360deg); 
                animation-timing-function: cubic-bezier(0.8, 0, 0.6, 1);
            }
        }

        @@media (max-width: 768px) {
            .tonearm {
                width: 20%;
                height: 40%;
                top: -2%;
                right: 10%;
                max-width: 80px;
            }

            .vinyl-player {
                width: 90vw;
                margin: 20px auto;
            }

            .track-title {
                font-size: 20px;
            }

            .control-btn {
                width: 44px;
                height: 44px;
                font-size: 18px;
            }

            .nav-btn {
                font-size: 14px;
            }
        }

        @@media (max-width: 480px) {
            .tonearm {
                width: 25%;
                height: 45%;
                top: -2%;
                right: 8%;
                max-width: 60px;
            }
        }

        .content-wrapper {
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const audioPlayer = document.getElementById('audio-player');
            const playPauseBtn = document.getElementById('playPauseBtn');
            const playIcon = document.getElementById('playIcon');
            const vinyl = document.getElementById('vinyl');
            const tonearm = document.getElementById('tonearm');

            function startPlay() {
                vinyl.classList.remove('stopping');
                tonearm.classList.remove('stopping');
                vinyl.classList.add('playing');
                tonearm.classList.add('playing');
                playIcon.classList.replace('fa-play', 'fa-pause');
            }

            function stopPlay() {
                vinyl.classList.remove('playing');
                tonearm.classList.remove('playing');
                vinyl.classList.add('stopping');
                tonearm.classList.add('stopping');
                playIcon.classList.replace('fa-pause', 'fa-play');

                // Remove the stopping classes after animations complete
                setTimeout(() => {
                    vinyl.classList.remove('stopping');
                    tonearm.classList.remove('stopping');
                }, 1200);
            }

            function togglePlay() {
                if (audioPlayer.paused) {
                    audioPlayer.play();
                    startPlay();
                } else {
                    audioPlayer.pause();
                    stopPlay();
                }
            }

            playPauseBtn.addEventListener('click', togglePlay);

            // Handle audio ending
            audioPlayer.addEventListener('ended', function() {
                stopPlay();
                audioPlayer.currentTime = 0;
            });

            // Handle audio errors
            audioPlayer.addEventListener('error', function() {
                stopPlay();
                console.error('Audio playback error:', audioPlayer.error);
            });

            // Remove any background that might be added dynamically
            if (tonearm) {
                tonearm.style.backgroundColor = 'transparent';
                tonearm.style.background = 'none';
            }
        });
    </script>
} 