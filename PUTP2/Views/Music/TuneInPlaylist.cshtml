            }

            .playlist-title {
                font-size: 2em;
            }
            .safari-track-list-container {
                 height: 75vh;
            }
            .track-card-safari {
                 width: 95%;
                 margin-bottom: -50px;
            }
            .track-card-content {
                 padding: 15px;
                 min-height: 90px;
            }
            .track-card-title {
                font-size: 1.1em;
            }
            .track-card-details {
                font-size: 0.8em;
                margin-bottom: 10px;
            }
            .play-button, .delete-track-btn {
                 width: 32px;
                 height: 32px;
                 font-size: 14px;
