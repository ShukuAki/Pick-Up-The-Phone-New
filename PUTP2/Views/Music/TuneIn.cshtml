                width: auto;
                height: auto;
                aspect-ratio: 2 / 3;
                transform: scale(1);
                opacity: 1;
                /* Reset side-scroll specific styles */
                scroll-snap-align: initial;
            }

            /* Remove the active scaling effect in grid view */
            .playlist-cards-grid.grid-view .playlist-card-wrapper.active {
                 transform: scale(1);
                 opacity: 1;
            }
        }
    </style>
