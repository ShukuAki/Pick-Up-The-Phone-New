@{
    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <!-- <h1>Profile</h1> Removed redundant heading -->
    <!-- Profile content will go here -->
</div>

<div class="container-fluid profile-content-area">
    <a href="javascript:history.back()" class="back-button">
        <i class="fas fa-arrow-left"></i>
    </a>
    <div class="profile-header mb-5">
        <h1 class="display-4 mb-4">Profile</h1>
        <div class="d-flex align-items-center mb-4">
            <div class="profile-info">
                <h2 class="mb-1">Pagadora Family</h2>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row mb-5">
        <div class="col-6 col-md-6 mb-3">
            <div class="stat-card">
                <div class="p-3 text-center">
                    <h3 class="mb-1">12</h3>
                    <p class="text-muted mb-0">Tracks Uploaded</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-6 mb-3">
            <div class="stat-card">
                <div class="p-3 text-center">
                    <h3 class="mb-1">1,234</h3>
                    <p class="text-muted mb-0">Total Plays</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <section class="mb-5">
        <h2 class="mb-3">Recent Activity</h2>
        <div class="activity-list">
            <div class="activity-item">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div>
                        <p class="mb-1">Uploaded "nanay tatay"</p>
                        <small class="text-muted">2 hours ago</small>
                    </div>
                    <button class="btn btn-link">
                        <i class="fas fa-play"></i>
                    </button>
                </div>
            </div>
            <div class="activity-item">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div>
                        <p class="mb-1">Listened to "Wa Meng Ti"</p>
                        <small class="text-muted">5 hours ago</small>
                    </div>
                    <button class="btn btn-link">
                        <i class="fas fa-headphones"></i>
                    </button>
                </div>
            </div>
            <div class="activity-item">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div>
                        <p class="mb-1">Created "Favourite Meal Growing Up" Prompt</p>
                        <small class="text-muted">yesterday</small>
                    </div>
                    <button class="btn btn-link">
                        <i class="fas fa-utensils"></i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Settings Button -->
    <div class="text-center">
        <button class="btn btn-outline-light">
            <i class="fas fa-cog me-2"></i>edit profile settings
        </button>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;700&display=swap');
    @@font-face {
        font-family: 'Americane';
        src: url('/fonts/Americane-Bold.woff2') format('woff2'),
             url('/fonts/Americane-Bold.woff') format('woff');
        font-weight: bold;
        font-style: normal;
    }
    html, body, .profile-container, .profile-content-area, .profile-header, .stat-card, .activity-item, .profile-info, .profile-info h2, .profile-info p, .back-button, .btn, .btn-outline-light {
        color: #171717 !important;
        font-family: 'IBM Plex Sans', Arial, sans-serif;
        font-weight: 400;
    }
    .profile-header h1, .display-4, h1 {
        font-family: 'Americane', Arial, sans-serif !important;
        font-weight: bold !important;
        color: #171717 !important;
    }
    .profile-info h2, .stat-card h3, h2, h3, .sub-header {
        font-family: 'IBM Plex Sans', Arial, sans-serif !important;
        font-weight: 700 !important;
        color: #171717 !important;
    }
    .profile-info p, .stat-card p, .activity-item p, .activity-item, p, span, label, input, select, button, a, .btn, .btn-outline-light {
        font-family: 'IBM Plex Sans', Arial, sans-serif !important;
        font-weight: 400 !important;
        color: #171717 !important;
    }
    .profile-content-area {
        padding-top: 15px; /* Keep some padding */
        position: relative;
    }

    .back-button {
        position: absolute;
        top: 15px; /* Keep button position */
        left: 15px;
        color: #2E2E2E;
        font-size: 18px;
        text-decoration: none;
        z-index: 10;
        background: var(--interactive);
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .back-button:hover {
        background: var(--highlight);
        transform: scale(1.1);
    }

    .profile-header {
        margin-top: 40px; /* Added margin to push header below button */
    }

    .stat-card {
        background-color: var(--spotify-grey);
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .stat-card:hover {
        background-color: #333;
    }

    .activity-item {
        background-color: var(--spotify-grey);
        border-radius: 8px;
        margin-bottom: 0.5rem;
        transition: background-color 0.3s ease;
    }

    .activity-item:hover {
        background-color: #333;
    }

    .btn-outline-light {
        border-color: #666;
        color: var(--spotify-white);
    }

    .btn-outline-light:hover {
        background-color: #333;
        border-color: var(--spotify-white);
    }

    .player-bar { display: none !important; }

    .display-4, h1, h2, h3 {
        text-transform: none !important;
    }
    .btn, .btn-outline-light {
        text-transform: none !important;
    }
</style> 